<!DOCTYPE html>
<html lang="fr">
    <head>
        <meta charset="UTF-8">
        <title>JDR Witcher - {% block title %}{% endblock %}</title>
        <link rel="icon" href="{{ asset('images/favicon.jpg') }}">

        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>
        <header>
            <nav class="navbar-expand-lg nav-links">
                <div>
                    <img class="logo" src="{{ asset('images/favicon.jpg') }}" alt="Logo" />
                </div>

                <a class="#" href="{{ path('app_accueil') }}">Accueil</a>
                {% if is_granted('ROLE_USER') %}
                <a class="#" href="#">Fiches personnage</a>
                <a class="#" href="{{ path('app_stuff_lister') }}">Magasin</a>
                <a class="#" href="#">Compétences de combat</a>
                <a class="#" href="#">Bestiaire</a>

                {% if is_granted('ROLE_ADMIN') %}
                <li class="nav-item dropdown menu">
                    <a class="nav-link dropdown-toggle" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                        Magasin
                    </a>
                    <ul class="dropdown-menu menu">
                        <li><a class="dropdown-item menu" href="{{ path('app_stuff_arme') }}">Armes</a></li>
                        <li><a class="dropdown-item menu" href="{{ path('app_stuff_armure') }}">Armures</a></li>
                        <li><a class="dropdown-item menu" href="{{ path('app_stuff_equipement') }}">Équipement général</a></li>
                        <li><a class="dropdown-item menu" href="{{ path('app_stuff_ingredient') }}">Ingrédients & Alchimie</a></li>
                        <li><a class="dropdown-item menu" href="{{ path('app_stuff_outil') }}">Outils</a></li>
                        <li><hr></li>
                        <li><a class="dropdown-item menu" href="#">A venir</a></li>
                    </ul>
                </li>
                {% endif %}


                {% endif %}

                {% if app.user is null %}
                    <a class="#" href="{{ path('app_login') }}">Connexion</a>
                {% else %}
                    <a class="#" href="{{ path('app_logout') }}">Déconnexion</a>
                    <a class="#" href="{{ path('app_profil_consulter') }}">Bonjour {{ app.user.pseudo }}</a>
                {% endif %}
            </nav>

        </header>

        <main>
            {% block body %}{% endblock %}
        </main>

        <footer class="footer">
            <div>
                <ul class="pied-page">
                    <li>Informations légales</li>
                    <li>-</li>
                    <li>JDRWitcher.com ©</li>
                    <li><a target=”_blank” class="text-primary" href="https://github.com/Meyadu17">Meya</a></li>
                    <li>-</li>
                    <li><a target=”_blank” class="text-primary" href="https://github.com/Meyadu17/jdr_wither">Code source sous license</a></li>
                </ul>

            </div>
        </footer>
    </body>
</html>
