{% extends 'base.html.twig' %}

{% block title %}Général{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('accordion') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('filter') }}
{% endblock %}

{% block body %}

    <div class="btn-group" role="group" aria-label="Default button group">
        <a class="btn btn-outline-info" href="{{ path('app_stuff_arme') }}">Arme</a>
        <a class="btn btn-outline-info" href="{{ path('app_stuff_armure') }}">Armure</a>
        <a class="btn btn-info" href="{{ path('app_stuff_equipement') }}">Équipement général</a>
        <a class="btn btn-outline-info" href="{{ path('app_stuff_ingredient') }}">Composant d'alchimie</a>
        <a class="btn btn-outline-info" href="{{ path('app_stuff_outil') }}">Outils</a>
        <a class="btn btn-outline-light" href="{{ path('app_stuff_lister') }}">Retour</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-outline-warning" href="{{ path('app_admin_equipement_ajouter') }}">
                Mettre un équipement en vente
            </a>
        {% endif %}
    </div>

    <!--titre-->
    <div class="titre-logo">
        <img class="logo" src="{{ asset('images/stuff/logo-equipement.png') }}" alt="Logo" />
        <h1>L'équipement général</h1>
        <img class="logo" src="{{ asset('images/stuff/logo-equipement.png') }}" alt="Logo" />
    </div>

    <!--filtres de recherche-->
    <div class="card text-center">
        <div class="card-body fond-image">
            <section class="admin_body_container" >
                <h4>Filtre de recherche</h4>
                {{ form_start(form) }}
                    <div class="input-group">
                        {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'type': 'search', 'placeholder': 'Rechercher par nom...', 'aria-label': 'Search', 'id': 'search-input'}}) }}
                        <span class="input-group-text"><a class="btn-close" href="{{ path('app_stuff_equipement') }}"></a></span>
                    </div>
                {{ form_end(form) }}
            </section>
        </div>
    </div>

    <br>
    <!--massage flash-->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-time" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <!--afficher la liste-->
    <section class="admin_body_container">
        <div class="accordion" id="accordionPanelsStayOpenExample">
            {% for libelle, equipements in equipementGroupedByType %}
                <div class="accordion-item accordion-color">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button"
                                data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree"
                                aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                            {{ libelle }}
                        </button>
                    </h2>
                    <div id="{{ 'collapse_' ~ libelle }}" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                        <!--afficher la liste-->
                        <section class="admin_body_container">
                            <div class="card-element">
                                {% for equipement in equipements %}
                                    <div class="card card-size">
                                    <div class="card-body fond-image">
                                        <h5 class="card-title">{{equipement.nom}}</h5>
                                        <h6 class="card-title">{{equipement.poids}} Kg - {{equipement.prix}} Couronnes</h6>
                                        <p class="card-text">{{equipement.description}}</p>
                                        <p href="#" class="card-text">
                                            {% if is_granted('ROLE_ADMIN') %}
                                            <a class="btn btn-outline-info" href="{{ path('app_admin_equipement_modifier', { 'id' : equipement.id }) }}">
                                                modifier
                                            </a>
                                            {% endif %}
                                        </p>
                                    </div>
                                </div>
                                {% endfor %}
                            </div>
                        </section>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>

    <script>
        // Appel de la fonction avec les paramètres spécifiques aux équipements
        document.addEventListener('DOMContentLoaded', function() {
            initializeSearch('search-input', 'result-container', '{{ path('app_stuff_equipement') }}');
        });
    </script>

{% endblock %}