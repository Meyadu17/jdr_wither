{% extends 'base.html.twig' %}

{% block title %}Magasin{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <div class="titre-logo">
        <img class="logo" src="{{ asset('images/logo-armure.jpg') }}" alt="Logo" />
        <h1>Les armures</h1>
        <img class="logo" src="{{ asset('images/logo-armure.jpg') }}" alt="Logo" />
    </div>

    <section class="admin_body_container" >
        <a class="btn btn-outline-info" href="{{ path('app_admin_armure_ajouter') }}">
            Mettre une armure en vente
        </a>
        <a class="btn btn-outline-light" href="{{ path('app_stuff_lister') }}">Retour</a>
    </section>
    <br>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <section class="admin_body_container">
        <div class="accordion" id="accordionPanelsStayOpenExample">
            {% for categorieArmure in categorieArmure %}
                <div class="accordion-item accordion-color">
                    <h2 class="accordion-header">
                        <button class="accordion-button collapsed" type="button"
                                data-bs-toggle="collapse"  data-bs-target="#panelsStayOpen-collapseOne"
                                aria-expanded="true" aria-controls="panelsStayOpen-collapseOne">
                            {{categorieArmure.libelle}}
                        </button>
                    </h2>
                    <div id="{{ 'collapse_' ~ categorieArmure.id }}" class="accordion-collapse collapse show">
                        <div class="accordion-body">
                            <table class="table table-dark">
                                <thead>
                                <tr>
                                    <th scope="col">Nom</th>
                                    <th scope="col">Protection</th>
                                    <th scope="col">Effet</th>
                                    <th scope="col">Emcombrement</th>
                                    <th scope="col">Poids</th>
                                    <th scope="col">Prix</th>
                                    <th scope="col">Action</th>
                                </tr>
                                </thead>
                                <tbody>
                                {% for armure in categorieArmure.armures %}
                                    <tr>
                                        <td>{{armure.nom}}</td>
                                        <td>{{armure.protection}}</td>
                                        <td>{{armure.effet}}</td>
                                        <td>{{armure.encombrement}}</td>
                                        <td>{{armure.poids}}</td>
                                        <td>{{armure.prix}}</td>
                                        <td>
                                            <a class="btn btn-outline-info" href="{{ path('app_admin_armure_modifier', { 'id' : armure.id }) }}">
                                                modifier
                                            </a>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}
