{% extends 'base.html.twig' %}

{% block title %}Talents{% endblock %}

{% block stylesheets %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}

{% block body %}

    <div class="btn-group" role="group" aria-label="Default button group">
        <a class="btn btn-info" href="{{ path('app_guide_personnage_talents') }}">Talents</a>
        <a class="btn btn-outline-info" href="{{ path('app_guide_personnage_handicaps') }}">Epreuves</a>
        <a class="btn btn-outline-info" href="{{ path('app_guide_personnage_jobs') }}">Jobs</a>
        <a class="btn btn-outline-info" href="{{ path('app_guide_personnage_races') }}">Races</a>
        <a class="btn btn-outline-light" href="{{ path('app_guide_personnage_lister') }}">Retour</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-outline-warning" href="#">
                Nouveau
            </a>
        {% endif %}
    </div>

    <h1>Talents</h1>

    <div class="card card-size-info">
        <div class="card-body fond-image">
            <h5 class="card-title">Acrobaties
                {% if is_granted('ROLE_ADMIN') %}
                    <a href="{{ path('app_guide_personnage_lister') }}">
                        <span class="material-symbols-outlined">edit</span>
                    </a>
                {% endif %}
            </h5>
            <h6 class="card-title"><i>Force</i></h6>

            <p class="card-title">Le personnage se sert du Talent Acrobaties pour réaliser des sauts périlleux,
                effectuer des roulés-boulés ou amortir ses chutes.</p>
        </div>
    </div>
{% endblock %}
