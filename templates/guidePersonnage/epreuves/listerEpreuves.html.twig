{% extends 'base.html.twig' %}

{% block title %}Handicaps{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('accordion') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('accordion') }}
{% endblock %}

{% block body %}

    <div class="btn-group" role="group" aria-label="Default button group">
        <a class="btn btn-outline-info" href="{{ path('app_guide_personnage_talents') }}">Talents</a>
        <a class="btn btn-info" href="{{ path('app_guide_personnage_handicaps') }}">Epreuves</a>
        <a class="btn btn-outline-info" href="{{ path('app_guide_personnage_jobs') }}">Jobs</a>
        <a class="btn btn-outline-info" href="{{ path('app_guide_personnage_races') }}">Races</a>
        <a class="btn btn-outline-light" href="{{ path('app_guide_personnage_lister') }}">Retour</a>
        {% if is_granted('ROLE_ADMIN') %}
            <a class="btn btn-outline-warning" href="#">
                Nouveau
            </a>
        {% endif %}
    </div>

    <h1>Handicaps</h1>

    <!--massage flash-->
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-time" role="alert">
            {{ message }}
        </div>
    {% endfor %}

    <!--afficher la liste-->
    <section class="admin_body_container">
        <div class="accordion" id="accordionPanelsStayOpenExample">

            <div class="accordion-item accordion-color">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button"
                            data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree"
                            aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                        Handicaps Physique
                    </button>
                </h2>
                <div class="accordion-collapse collapse hide">
                    <div class="accordion-body">
                        <table class="table table-dark">
                            <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Description</th>
                                <th scope="col">Malus de -4</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for handicapPhysique in handicapsPhysiques %}
                                <tr>
                                    <td>{{handicapPhysique.valeur}}</td>
                                    <td>{{handicapPhysique.description}}</td>
                                    <td>{{handicapPhysique.malus}}</td>
                                    <td>
                                        <a href="{{ path('app_guide_personnage_lister') }}">
                                            <span class="material-symbols-outlined">edit</span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="accordion-item accordion-color">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button"
                            data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree"
                            aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                        Handicaps Moral
                    </button>
                </h2>
                <div class="accordion-collapse collapse hide">
                    <div class="accordion-body">
                        <table class="table table-dark">
                            <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Caractère</th>
                                <th scope="col">Description</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for handicapMoral in handicapsMoraux %}
                                <tr>
                                    <td>{{handicapMoral.valeur}}</td>
                                    <td>{{handicapMoral.caractere}}</td>
                                    <td>{{handicapMoral.description}}</td>
                                    <td>
                                        <a href="{{ path('app_guide_personnage_lister') }}">
                                            <span class="material-symbols-outlined">edit</span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <div class="accordion-item accordion-color">
                <h2 class="accordion-header">
                    <button class="accordion-button collapsed" type="button"
                            data-bs-toggle="collapse" data-bs-target="#panelsStayOpen-collapseThree"
                            aria-expanded="false" aria-controls="panelsStayOpen-collapseThree">
                        Quêtes
                    </button>
                </h2>
                <div class="accordion-collapse collapse hide">
                    <div class="accordion-body">
                        <table class="table table-dark">
                            <thead>
                            <tr>
                                <th scope="col"></th>
                                <th scope="col">Description</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for quete in quetes %}
                                <tr>
                                    <td>{{quete.valeur}}</td>
                                    <td>{{quete.description}}</td>
                                    <td>
                                        <a href="{{ path('app_guide_personnage_lister') }}">
                                            <span class="material-symbols-outlined">edit</span>
                                        </a>
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>
    </section>

{% endblock %}
