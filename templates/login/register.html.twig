{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    {{ encore_entry_link_tags('formControl') }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    {{ encore_entry_script_tags('formControl') }}
{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('error') %}
        <div class="alert alert-danger" role="alert">
            {{ flash_error }}
        </div>
    {% endfor %}

    <section class="vh-100">
        <div class="container h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col-lg-12 col-xl-11">
                    <div class="card">
                        <div class="card-body p-md-5">
                            <div class="row justify-content-center">
                                <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">

                                    <h3 class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">S'inscrire</h3>

                                    {{ form_errors(registrationForm, { 'attr' : {'class' : 'mx-1 mx-md-4'}} ) }}

                                    {{ form_start(registrationForm, { 'attr' : {'class' : 'mx-1 mx-md-4'}} ) }}

                                    <div class="form-outline mb-4">
                                        {{ form_row(registrationForm.pseudo) }}
                                    </div>

                                    <div class="form-outline mb-4">
                                        {{ form_row(registrationForm.email) }}
                                    </div>

                                    <div class="form-outline mb-4">
                                        {{ form_row(registrationForm.password) }}
                                    </div>

                                    <div class="form-outline mb-4">
                                        {{ form_row(registrationForm.photo) }}
                                    </div>

                                    <div class="d-flex justify-content-center">
                                        <button type="submit" class="btn btn-outline-info">Inscription</button>
                                    </div>

                                    {{ form_end(registrationForm) }}

                                </div>
                                <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                                    <img src="{{ asset('images/favicon.jpg') }}" class="img-fluid" alt="Sample image">
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

{% endblock %}
